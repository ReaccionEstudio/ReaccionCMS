<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>{% if seo is defined %}{{ getTitle(seo) }}{% else %}{{ getConfig('site_name') }}{% endif %}</title>

    <link rel="icon" href="favicon.ico" />
    <link href="{{ asset('build/front_app.css') }}" rel="stylesheet" />

  </head>

  <body>

    {{ displayFlashMessages(['signin_success','post_reply_success','remove_comment_success', 'language_switch_error'], ['fixed-alert']) | raw }}
    
    {% embed '@ReaccionCMSBundle/rocket_theme/layout/navigation.html.twig' %}{% endembed %}

    <div class="container pt-3">

      {% block body %}{% endblock %}

      {% embed '@ReaccionCMSBundle/rocket_theme/layout/footer.html.twig' %}{% endembed %}

    </div>

    {% embed '@ReaccionCMSBundle/rocket_theme/layout/js_vars.html.twig' %}{% endembed %}
