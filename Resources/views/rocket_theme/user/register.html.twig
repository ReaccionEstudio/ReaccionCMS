{% extends '@ReaccionCMSBundle/rocket_theme/base.html.twig' %}

{% block body %}

<div class="card col-sm-6 ml-auto mr-auto mt-4 mb-4">
	<div class="card-body pl-2 pt-4">
		<h5 class="card-title">{{ 'user_register.signup' | trans }}</h5>
		<hr />
		
		{% for message in app.session.flashbag.get('signup_errors') %}
		<div class="alert alert-danger">{{ message }}</div>
		{% endfor %}

		{{ form_start(form) }}

			<div class="form-group">
	        	{{ form_label(form.username) }}
	        	{{ form_widget(form.username) }}
	        </div>

			<div class="form-group">
	        	{{ form_label(form.email) }}
	        	{{ form_widget(form.email) }}
	        </div>

	        {% for passwordField in form.password %}
			<div class="form-group">
			    {{ form_label(passwordField) }}
	        	{{ form_widget(passwordField) }}
	        </div>
	        {% endfor %}

			<div class="form-group text-center mt-4">
	        	{{ form_label(form.save) }}
	        	{{ form_widget(form.save) }}
	        </div>

		{{ form_end(form) }}

	</div>
</div>

{% endblock %}