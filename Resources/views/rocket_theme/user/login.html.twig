{% extends '@ReaccionCMSBundle/rocket_theme/base.html.twig' %}

{% block body %}

<div class="card col-sm-6 ml-auto mr-auto mt-4 mb-4">
	<div class="card-body pl-2 pt-4">
		<h5 class="card-title">{{ 'user_login.signin' | trans }}</h5>
		<hr />

		{{ displayFlashMessages(['signin_error']) | raw }}

		{{ form_start(form) }}

			<div class="form-group">
	        	{{ form_label(form.username) }}
	        	{{ form_widget(form.username, { 'attr' : {'autofocus':'autofocus'} }) }}
	        </div>

			<div class="form-group">
				<div class="row">
					<div class="col-sm-6">
		        		{{ form_label(form.password) }}
					</div>
					<div class="col-sm-6 text-right">
			        	<a href="{{ url('user_resetting') }}" class="text-right" title="{{ 'user_login.forgot_password' | trans }}"><small>{{ 'user_login.forgot_password' | trans }}</small></a>
			        </div>
		        </div>
	        	{{ form_widget(form.password) }}
	        </div>

			<div class="form-group text-center mt-4">
	        	{{ form_label(form.save) }}
	        	{{ form_widget(form.save) }}
	        </div>

		{{ form_end(form) }}

	</div>

</div>

{% if getConfig('user_registration') %}
<div class="text-center">
	<a href="{{ url('user_register') }}">{{ 'user_login.create_new_account_link' | trans }}</a>
</div>
{% endif %}

{% endblock %}
