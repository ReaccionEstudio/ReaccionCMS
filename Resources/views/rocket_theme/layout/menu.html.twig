<!-- macro definition -->
{% macro listMenu(menuItem) %}
{% import _self as self %}

<li class="nav-item dropdown">

	{% if menuItem.type == "page" %}
		{% set url = url('index_slug', { 'slug' : menuItem.value }) %}
	{% elseif menuItem.type == "url" %}
		{% set url = menuItem.value %}
	{% endif %}

	{% if menuItem.children is defined and menuItem.children is not empty %}
	<a class="nav-link dropdown-toggle pl-4" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ menuItem.name }}</a>
	{% else %}
	<a class="nav-link pl-4" href="{{ url }}" target="{{ menuItem.target }}">{{ menuItem.name }}</a>
	{% endif %}

	{% set parentId = menuItem.id %}

	{% if menuItem.children is defined and menuItem.children is not empty %}
		<ul class="dropdown-menu dropdown-menu-right">
	    	{% for child in menuItem.children %}
	        	{{ self.listMenu(child) }}
	    	{% endfor %}
		</ul>
	{% endif %}

</li>

{% endmacro %}

<nav class="my-2 my-md-0 mr-md-3 navbar navbar-expand-lg navbar-light">

	<div class="collapse navbar-collapse" id="navbarSupportedContent">

	    <ul class="navbar-nav mr-auto">

	    	<!-- run macro -->
			{% from _self import listMenu %}

	    	{% for menu_item in menu %}
		   		{{ listMenu(menu_item) }}
	    	{% endfor %}

	    </ul>

  	</div>

</nav>