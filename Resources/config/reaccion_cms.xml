<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
    	
    	<parameter key="reaccion_cms.version">0.1</parameter>
    	<parameter key="reaccion_cms.routing.class">App\ReaccionEstudio\ReaccionCMSBundle\Services\Routing\RoutingService</parameter>
        <parameter key="reaccion_cms.theme.class">App\ReaccionEstudio\ReaccionCMSBundle\Services\Themes\ThemeService</parameter>
        <parameter key="reaccion_cms.config.class">App\ReaccionEstudio\ReaccionCMSBundle\Services\Config\ConfigService</parameter>
        <parameter key="reaccion_cms.menu.class">App\ReaccionEstudio\ReaccionCMSBundle\Services\Menu\MenuService</parameter>
        <parameter key="reaccion_cms.cache.class">App\ReaccionEstudio\ReaccionCMSBundle\Services\Cache\CacheService</parameter>
        <parameter key="reaccion_cms.entry.class">App\ReaccionEstudio\ReaccionCMSBundle\Services\Entries\EntryService</parameter>
        <parameter key="reaccion_cms.user.class">App\ReaccionEstudio\ReaccionCMSBundle\Services\User\UserService</parameter>
        <parameter key="reaccion_cms.authentication.class">App\ReaccionEstudio\ReaccionCMSBundle\Services\Authentication\AuthenticationService</parameter>
        <parameter key="reaccion_cms.comment.class">App\ReaccionEstudio\ReaccionCMSBundle\Services\Comment\CommentService</parameter>
        <parameter key="reaccion_cms.referrer_url_listener.class">App\ReaccionEstudio\ReaccionCMSBundle\EventListener\ReferrerUrlListener</parameter>

        <parameter key="reaccion_cms.logger.class">App\ReaccionEstudio\ReaccionCMSBundle\Services\Utils\LoggerService</parameter>

    </parameters>

    <services>
    	
        <!-- services -->
    	<service id="reaccion_cms.routing" class="%reaccion_cms.routing.class%" public="true">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="reaccion_cms.theme" />
            <argument type="service" id="reaccion_cms_admin.page_cache_service" />
            <argument type="service" id="twig" />
            <argument type="service" id="reaccion_cms.cache" />
        </service>
    	
    	<service id="reaccion_cms.theme" class="%reaccion_cms.theme.class%" public="true">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="reaccion_cms.config" />
            <argument>%kernel.project_dir%</argument>
        </service>
        
        <service id="reaccion_cms.config" class="%reaccion_cms.config.class%" public="true">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
        
        <service id="reaccion_cms.menu" class="%reaccion_cms.menu.class%" public="true">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="reaccion_cms_admin.menu_content" />
            <argument type="service" id="twig" />
            <argument type="service" id="reaccion_cms.theme" />
            <argument type="service" id="reaccion_cms.cache" />
        </service>
        
        <service id="reaccion_cms.cache" class="%reaccion_cms.cache.class%" public="true"></service>

        <service id="reaccion_cms.entries" class="%reaccion_cms.entry.class%" public="true">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="knp_paginator" />
            <argument type="service" id="reaccion_cms.config" />
        </service>

        <service id="reaccion_cms.user" class="%reaccion_cms.user.class%" public="true">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="translator" />
            <argument type="service" id="session" />
            <argument type="service" id="router" />
        </service>

        <service id="reaccion_cms.authentication" class="%reaccion_cms.authentication.class%" public="true">
            <argument type="service" id="session" />
            <argument type="service" id="translator" />
            <argument type="service" id="security.token_storage" />
        </service>

        <service id="reaccion_cms.comment" class="%reaccion_cms.comment.class%" public="true">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="session" />
            <argument type="service" id="translator" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="reaccion_cms.config" />
            <argument type="service" id="reaccion_cms_admin.page_cache_service" />
            <argument type="service" id="reaccion_cms.logger" />
        </service>

        <service id="reaccion_cms.logger" class="%reaccion_cms.logger.class%" public="true">
            <argument type="service" id="logger" />
            <tag name="monolog.logger" channel="reaccion_cms" />
        </service>

        <!-- event listeners -->
        <service id="reaccion_cms.referrer_url_listener" class="%reaccion_cms.referrer_url_listener.class%" public="true">
            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" />
        </service>

    </services>

</container>