<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="reaccion_cms.abstractModel.class">ReaccionEstudio\ReaccionCMSBundle\Model\AbstractModel</parameter>
        <parameter key="reaccion_cms.model.language.class">ReaccionEstudio\ReaccionCMSBundle\Model\AbstractModel</parameter>
    </parameters>

    <services>

        <service id="reaccion_cms.abstractModel" class="%reaccion_cms.abstractModel.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

        <service id="reaccion_cms.model.language" class="%reaccion_cms.model.language.class%" parent="reaccion_cms.abstractModel" public="true"></service>

    </services>

</container>