<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="reaccion_cms.manager.abstract.class">ReaccionEstudio\ReaccionCMSBundle\Manager\AbstractManager</parameter>
        <parameter key="reaccion_cms.manager.language.class">ReaccionEstudio\ReaccionCMSBundle\Manager\LanguageManager</parameter>
    </parameters>

    <services>

        <service id="reaccion_cms.manager.abstract" class="%reaccion_cms.manager.abstract.class%">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="reaccion_cms.config" />
        </service>

        <service id="reaccion_cms.manager.language" class="%reaccion_cms.manager.language.class%" parent="reaccion_cms.manager.abstract" public="true">
        </service>

    </services>

</container>